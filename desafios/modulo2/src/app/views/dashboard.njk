{% extends "_layouts/default.njk" %}

{% block body %}
  <div class="content">
    <strong>Ol√°, {{ user.name }}</strong>
    <p>Inicie um agendamento escolhendo um profissional abaixo:</p>

    <ul class="providers">
      {% for provider in providers %}
        <li class="provider {% if user.id == provider.id %}active{% endif %}">
          <div>
            <img src="/files/{{ provider.avatar }}">
            <div class="info">
              <strong>{{ provider.name }}</strong>

              {% if user.id == provider.id and user.provider == true %}
              <a class="schedules-today" href="/app/schedule">Agendamentos para hoje</a>
              {% endif %}
            </div>
          </div>
          <a class="btn-schedule" href="/app/appointments/new/{{ provider.id }}">+</a>
        </li>
      {% endfor %}
    </ul>

    <a href="/app/logout" class="logout">Sair</a>
  </div>
{% endblock %}
